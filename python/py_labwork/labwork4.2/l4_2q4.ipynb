   "source": [
    "def sum_to_single_digit(n):\n",
    "    if n < 10:\n",
    "        return n\n",
    "    digit_sum = sum(int(digit) for digit in str(n))\n",
    "    return sum_to_single_digit(digit_sum)\n",
    "\n",
    "number = 9875\n",
    "result = sum_to_single_digit(number)\n",
    "print(\"Single-digit sum:\", result)\n"
   ]
